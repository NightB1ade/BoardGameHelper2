{
	"title": "Game"
	, "type": "object"
	, "required": [
		"bggid"
		, "name"
	]
	, "properties": {
		"bggid": {
			"type": "integer"
			, "title": "BGG ID"
			, "minimum": 1
		}
		, "name": {
			"type": "string"
			, "title": "Name"
			, "minLength": 4
		}
		, "expansions": {
			"type": "array"
			, "title": "Expansions"
			, "format": "table"
			, "uniqueItems": true
			, "items": {
				"type": "object"
				, "title": "Expansion"
				, "required": [
					"expansionCode"
					, "expansionName"
					, "default"
				]
				, "properties": {
					"expansionCode": {
						"type": "string"
						, "title": "Expansion Code"
						, "minLength": 4
					}
					, "expansionName": {
						"type": "string"
						, "title": "Expansion Name"
						, "minLength": 4
					}
					, "default": {
						"type": "boolean"
						, "title": "Default State"
					}
				}
			}
		}
		, "textSections": {
			"type": "array"
			, "title": "Text Sections"
			, "uniqueItems": true
			, "items": {
				"type": "object"
				, "title": "Text Section"
				, "required": [
					"mainHeader"
				]
				, "properties": {
					"mainHeader": {
						"type": "string"
						, "title": "Main Header"
						, "minLength": 4
					}
					, "subsections": {
						"type": "array"
						, "title": "Subsections"
						, "items": {
							"type": "object"
							, "title": "Subsection"
							, "required": [
								"subsectionHeader"
							]
							, "properties": {
								"subsectionHeader": {
									"type": "string"
									, "title": "Subsection Header"
									, "minLength": 4
								}
								, "bulletPoints": {
									"type": "array"
									, "title": "Bullet Points"
									, "items": {
										"type": "object"
										, "title": "Bullet Point"
										, "required": [
											"text"
										]
										, "properties": {
											"text": {
												"type": "string"
												, "title": "Text"
												, "minLength": 3
											}
											, "expansionDisplayRules": {
												"type": "array"
												, "title": "Expansion Display Rules"
												, "show_opt_in": true
												, "items": {
													"type": "object"
													, "title": "Expansion Display Rule"
													, "required": [
														"expansionCode"
														, "displayRule"
													]
													, "properties": {
														"expansionCode": {
															"type": "string"
															, "title": "Expansion Code"
															, "minLength": 4
														}
														, "displayRule": {
															"type": "boolean"
															, "title": "Display Rule"
															, "default": true
														}
													}
												}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
